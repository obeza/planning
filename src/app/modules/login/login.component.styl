.form-horizontal
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    padding: 45px 30px 30px;
    margin: 0 -15px 15px;
    margin-right: 0;
    margin-left: 0;
    margin-top 100px

.error
    color red

#loading
    position fixed
    z-index: 1000000
    background #000
    color #fff
    width: 200px
    padding 8px
    left 30px
    bottom -80px
    transition .3s ease bottom